QMenuBar {
    background-color: #1d1d1d;
}
QMenuBar::item {
    background-color: transparent;
    color: #CFCFCF;
}
QMenuBar::item:selected {
    background-color: #303030;
    color: #E7E7E7;
}
QMenuBar::item:pressed {
    background-color: #606060;
    color: #000000;
}
QMenu {
    background-color: #303030;
    color: #CFCFCF;
    padding: 0px;
    icon-size: 22px;
}
QMenu::item:selected {
    background-color: #606060;
    color: #000000;
}

QSplitter::handle {
    background-color: transparent;
}
QSplitter#knitting::handle {
    background-color: transparent;
}

QLabel#mapKnitting{
    background-color: #000000;
}

QScrollBar {
                width: 10px;
                height: 10px;
            }
QScrollArea#widgetKnitting {
    background-color: #303030;
    border-radius: 3px;
    padding: 0px;
}



QWidget#widgetMain {
    background-color: #161616;
    border-radius: 0px;
    padding: 1px;
}

